{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",  // Type for C++ debugging
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}", // Path to your built executable
            "args": [],  // Arguments to pass to the executable (empty in this case)
            "stopAtEntry": true,  // Stop at the entry point (main function)
            "cwd": "${config:cmake.buildDirectory}",  // Current working directory
            "environment": [],  // Environment variables (optional)
            "externalConsole": true,  // Use integrated terminal for input/output
            "MIMode": "lldb",  // Use LLDB as the debugger mode (but avoid --interpreter=mi)
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for LLDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",  // Ensure this corresponds to the task defined in tasks.json
            //"miDebuggerPath": "/usr/bin/lldb",  // Path to LLDB binary (ensure it's correct for macOS)
            "logging": {
                "engineLogging": true  // Enable detailed logging for debugging
            }
        }
    ]
}
