{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",                            // This label must match the `preLaunchTask` in launch.json
            "type": "shell",                             // Type is shell since we're running a bash script
            "command": "${workspaceFolder}/build.sh",    // Path to your build script
            "group": {
                "kind": "build",
                "isDefault": true                       // This is the default build task
            },
            "problemMatcher": [],                        // You can define problem matchers if needed
            "detail": "Run build script before debugging" // Task description
        }
    ]
}
